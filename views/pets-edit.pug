extends layout

block content
    
    .row.justify-content-center
        .col-sm-6
            legend Edit Pet
            form#edit-pet(action="#")
                .form-group
                    label Name
                    input.form-control(name="name" value=pet.name)
                .form-group
                    label Species
                    input.form-control(name="species" value=pet.species)    
                .form-group
                    label Avatar
                    input.form-control(name="price", value=pet.price)
                .form-group
                    label Avatar
                    input.form-control(name="avatar", type='file')
                .form-group
                    label Birthday
                    input.form-control(name="birthday" value=pet.birthday)    
                .form-group
                    label Favorite Food
                    input.form-control(name="favoriteFood" value=pet.favoriteFood)    
                .form-group
                    label Description
                    textarea.form-control(name="description")= pet.description
                .form-group
                    input.form-control(name="_id", type="hidden", value=pet._id)
                button(type="submit").btn.btn-primary Save
            .text-right
                form(action="/pets/0?_method=DELETE", method="POST")
                    button(type="submit").btn.btn-danger Remove
